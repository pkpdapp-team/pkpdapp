[[model]]
name: First order absorption model, single absorption site (connects to any PK model)
author: Michael Gertz

# Initial values:
PKCompartment.Aa = 0

[environment]
t = 0 in [h] bind time


[PKCompartment]

ka = 1 in [1/h]
    desc: First order absorption rate constant  
	
RateAbs = ka*Aa in [pmol/h]
	desc: Absorption rate

dot(Aa) = -RateAbs in [pmol]
    desc: Amount of drug in absorption compartment