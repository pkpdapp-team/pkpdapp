{
	"name": "Ona",
	"image": "mcr.microsoft.com/devcontainers/universal:4.0.1-noble",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.10"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20",
			"installYarnUsingApt": false
		},
		"ghcr.io/devcontainers-contrib/features/apt-packages:1": {
			"packages": "build-essential,libsasl2-dev,python3-dev,libldap2-dev,libssl-dev,libsundials-dev,memcached"
		}
	},
	"postCreateCommand": "corepack enable && corepack prepare yarn@stable --activate"
}